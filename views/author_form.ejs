<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('layout') %>

    <h1><%= title %></h1>

    <form method="POST" action="">
      <div class="form-group">
        <label for="first_name">First Name:</label>
        <input
          id="first_name"
          class="form-control"
          type="text"
          placeholder="First name"
          name="first_name"
          required
          value="<%= (locals.author === undefined ? '' : author.first_name) %>"
        />
        <label for="family_name">Family Name:</label>
        <input
          id="family_name"
          class="form-control"
          type="text"
          placeholder="Family name"
          name="family_name"
          required
          value="<%= (locals.author === undefined ? '' : author.family_name) %>"
        />
      </div>
      <div class="form-group">
        <label for="date_of_birth">Date of birth:</label>
        <input
          id="date_of_birth"
          class="form-control"
          type="date"
          name="date_of_birth"
          value="<%= (locals.author === undefined ? '' : author.date_of_birth) %>"
        />
      </div>
      <div class="form-group">
        <label for="date_of_death">Date of death:</label>
        <input
          id="date_of_death"
          class="form-control"
          type="date"
          name="date_of_death"
          value="<%= (locals.author === undefined ? '' : author.date_of_death) %>"
        />
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>

    <% if (locals.errors) { %>
    <ul>
      <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
      <% }); %>
    </ul>
    <% } %>
  </body>
</html>
