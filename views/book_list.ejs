<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include("./layout.ejs")%>
    <h1><%= title %></h1>

    <ul>
      <% if (book_list.length > 0) { %> <% book_list.forEach(book => { %>
      <li>
        <a href="<%= book.url %>"><%= book.title %></a>
        (<%= book.author.name %>)
      </li>
      <% }); %> <% } else { %>
      <li>There are no books.</li>
      <% } %>
    </ul>
  </body>
</html>
